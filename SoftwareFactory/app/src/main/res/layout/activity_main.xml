<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.labsoftware18.softwarefactory.MainActivity"
    android:weightSum="1"
    android:baselineAligned="false"
    android:orientation="vertical">



    <EditText
        android:id="@+id/editText10"
        android:layout_width="485dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Id"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="182dp"
        android:layout_below="@+id/editText4"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="490dp"
        android:layout_height="54dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Edad"
        tools:layout_editor_absoluteY="264dp"
        tools:layout_editor_absoluteX="29dp"
        android:layout_below="@+id/editText10"
        android:layout_toEndOf="@+id/linearLayout" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="485dp"
        android:layout_height="53dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nombre"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="91dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView2" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">


    </LinearLayout>


    <Button
        android:id="@+id/Mostrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Admin"
        android:layout_toEndOf="@+id/linearLayout"
        android:text="Mostrar"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Nombre              codigo                     tipo "
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@+id/Mostrar"
        android:layout_alignStart="@+id/list" />

    <ListView
        android:id="@+id/list"
        android:layout_width="102dp"
        android:layout_height="152dp"
        android:layout_weight="0.55"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/Admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Pro"
        android:layout_alignBottom="@+id/Pro"
        android:layout_centerHorizontal="true"
        android:text="Administrador"
        android:textSize="8sp" />

    <Button
        android:id="@+id/Pro"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText11"
        android:layout_toStartOf="@+id/Admin"
        android:text="Profesor"
        android:textSize="8sp" />

    <Button
        android:id="@+id/Estu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText11"
        android:layout_toEndOf="@+id/Admin"
        android:text="Estudiante"
        android:textSize="8sp" />


    <ListView
        android:id="@+id/listt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/Admin" />

    <ListView
        android:id="@+id/listtt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_marginStart="87dp"
        android:layout_toStartOf="@+id/listt" />

    <TextView
        android:id="@+id/cont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asistencia"
        android:layout_above="@+id/editText10"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
